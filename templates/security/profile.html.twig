{% extends 'base.html.twig' %}

{% block title %}Profil de {{ user.username }}{% endblock %}

{% block content %}

    <section class="pt-5 py-5">
        <div class="container py-5">

            <div class="row">
                <div class="col-lg-4">
                    <div class="card mb-4">
                        <div class="card-body text-center">
                            <img src="{{ asset('images/logo.png') }}" alt="avatar"
                                 class="rounded-circle img-fluid" style="width: 150px; height: 150px;">
                            <h5 class="my-3">{{user.username}}</h5>
                            <h5 class="my-3 fw-light">{{user.firstName}} {{user.name}}</h5>
                            <p class="text-muted pb-2"></p>
                        </div>
                    </div>
                </div>


                <div class="col-lg-8">
                    <div class="card mb-4">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-sm-3">
                                    <p class="mb-0">Nom complet</p>
                                </div>
                                <div class="col-sm-9">
                                    <p class="text-muted mb-0">{{user.firstName}} {{user.name}}</p>
                                </div>
                            </div>
                                <hr>
                            {% if app.user == user %}
                                <div class="row">
                                    <div class="col-sm-3">
                                        <p class="mb-0">Email</p>
                                    </div>
                                    <div class="col-sm-9">
                                        <p class="text-muted mb-0">{{user.email}} <span class="fw-light fst-italic">(uniquement visible par vous)</span></p>
                                    </div>
                                </div>
                            <hr>
                            {% else %}
                            {% endif %}
                            <div class="row">
                                <div class="col-sm-3">
                                    <p class="mb-0">Date inscription</p>
                                </div>
                                <div class="col-sm-9">
                                    <p class="text-muted mb-0">{{ user.dateinscription | date('d/m/y') }}</p>
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <p class="mb-0">RÃ´le</p>
                                </div>
                                <div class="col-sm-9">

                                    {% if "ROLE_ADMIN" in user.roles %}

                                        <p class="text-muted mb-0">Administrateur</p>

                                    {% else %}

                                        <p class="text-muted mb-0">Utilisateur</p>

                                    {% endif %}

                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
            <nav>
                <div class="nav nav-tabs" id="nav-tab" role="tablist">
                    <button class="nav-link active" id="nav-figure-tab" data-bs-toggle="tab" data-bs-target="#nav-figure" type="button" role="tab" aria-controls="nav-figure" aria-selected="true">Figures</button>
                    <button class="nav-link" id="nav-commentaire-tab" data-bs-toggle="tab" data-bs-target="#nav-commentaire" type="button" role="tab" aria-controls="nav-commentaire" aria-selected="false">Commentaires</button>
                </div>
            </nav>
            <div class="tab-content" id="nav-tabContent">
                <div class="tab-pane fade show active" id="nav-figure" role="tabpanel" aria-labelledby="nav-figure-tab">
                    <div class="row">
                        {% for figure in figures %}
                            <div class="col-12 col-md-6">
                                {% include "macros/macro.figure.html.twig" %}
                            </div>
                        {% endfor %}
                    </div>
                </div>
                <div class="tab-pane fade" id="nav-commentaire" role="tabpanel" aria-labelledby="nav-profile-tab">
                    <div class="row">
                        {% for comment in comments %}
                            <div class="col-12 col-md-6">
                                {% include "macros/macro.comment.html.twig" %}
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>

        </div>
    </section>
{% endblock %}
