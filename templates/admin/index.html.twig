{% extends 'base.html.twig' %}

{% block title %}Hello AdminController!{% endblock %}

{% block content %}

<div class="container">
    <div class="row">
        <div class="col-6">
            <div class="row mb-2">
                {% for figure in figures %}
                    {% include "macros/macro.figure.html.twig" %}
                {% endfor %}
            </div>
        </div>
        <div class="col-6">
            {% for comment in comments %}

                <div class="card my-4">
                    <div class="card-body">
                        {{ comment.content }}

                        <div class="d-flex justify-content-between">
                            <div class="d-flex flex-row align-items-center">
                                <img src="{{ asset('images/logo.png') }}" alt="avatar" width="25"
                                     height="25" />
                                <p class="small mb-0 ms-2">{{ comment.user.username }}</p>
                            </div>
                            <div class="d-flex flex-row align-items-center">
                                <p class="small text-muted mb-0">{{ comment.datecreation| date }}</p>
                            </div>
                        </div>
                        {% if comment.datemodif %}
                            <div class="d-flex justify-content-end">
                                <div class="d-flex flex-row align-items-center">
                                    <p class="small mb-0 primary-text"> modifi√© le {{ comment.datemodif| date }}</p>
                                </div>
                            </div>
                        {% else %}
                        {% endif %}
                    </div>
                </div>

            {% endfor %}
        </div>
        </div>
</div>
{% endblock %}
