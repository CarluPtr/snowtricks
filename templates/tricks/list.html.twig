{% extends 'base.html.twig' %}

{% block content %}
    <section class="my-5 pt-5" id="section-figure">
        <div class="container">
            <div class="row justify-content-around">
                {% for figure in figures %}
                <div class="col-12 col-md-6 col-lg-3 my-2">
                    <div class="card-figure">
                        <img src="{{ asset('images/snowboard-' ~ random(1,2) ~ '.png') }}" alt="" class="card__img alternative-{{ random(1,2) }}">

                        <!-- <div class="card__content">  -->
                        <div class="card__data">
                            <p class="card__title fw-bold">{{ figure.name }}</p>
                            <p class="card__preci"><span class="fw-light">par</span> {{ figure.user.username }}</p>
                            <p class="card__description">{{ figure.description }}</p>
                            <a href="{{ path('trick_show', { 'slug': figure.id }) }}" class="card__button">En lire plus</a>
                        </div>
                    </div>
                </div>
                {% endfor %}
            </div>
        </div>

    </section>
{% endblock %}