{% extends 'base.html.twig' %}

{% block content %}
    <section class="my-5 pt-5" id="section-figure">
        <div class="container">
            <div class="row justify-content-around">
                <div class="col-12 col-md-4 my-2">
                    <img src="{{ asset('images/snowboard-' ~ random(1,2) ~ '.png') }}" alt="" class="card__img alternative-{{ random(1,2) }}">
                </div>
                <div class="col-12 col-md-8 my-2">
                    <div class="card-figure-details">
                        <div class="card__content">
                            <p class="card__title fw-bold">{{ figure.name }}</p>
                            <p class="card__preci"><span class="fw-light">par</span> {{ figure.user.username }} <span class="fw-light">le {{ figure.datecreation | date('d/m/Y') }} à {{ figure.datecreation | date('H:i') }}</span></p>
                            <p class="description">{{ figure.description }}</p>
                            <hr class="bg-primary border-2 border-top border-primary my-4">
                            <p class="content">{{ figure.content }}</p>
                        </div>
                    </div>
                </div>
            </div>
            <h3 class="h3 my-5">Espace de discussion</h3>

                {{ form_start(comment_form) }}
                {{ form_errors(comment_form) }}
                {{ form_row(comment_form.content, { 'label': 'Écrivez votre commentaire :' }) }}
                {{ form_end(comment_form) }}


                {% for comment in comments %}

                    <div class="card my-4">
                        <div class="card-body">
                            {{ comment.content }}

                            <div class="d-flex justify-content-between">
                                <div class="d-flex flex-row align-items-center">
                                    <img src="{{ asset('images/logo.png') }}" alt="avatar" width="25"
                                         height="25" />
                                    <p class="small mb-0 ms-2">{{ comment.user.username }}</p>
                                </div>
                                <div class="d-flex flex-row align-items-center">
                                    <p class="small text-muted mb-0">le {{ comment.datecreation | date('d/m/Y') }} à {{ comment.datecreation | date('H:i') }}</p>
                                </div>
                            </div>
                            {% if comment.datemodif %}
                            <div class="d-flex justify-content-end">
                                <div class="d-flex flex-row align-items-center">
                                    <p class="small mb-0 primary-text"> modifié le {{ comment.datemodif | date('d/m/Y') }} à {{ comment.datemodif | date('H:i') }}</p>
                                </div>
                            </div>
                            {% else %}
                            {% endif %}
                        </div>
                    </div>

                {% endfor %}
        </div>

    </section>
{% endblock %}