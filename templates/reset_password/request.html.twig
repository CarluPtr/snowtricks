{% extends 'base.html.twig' %}

{% block title %}Mot de passé oublié{% endblock %}

{% block content %}
    <div class="container">
        {% for flash_error in app.flashes('reset_password_error') %}
            <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
        {% endfor %}
        <h1 class="py-5 text-center">Réinitialiser votre mot de passe</h1>

        {{ form_start(requestForm) }}
            {{ form_row(requestForm.username) }}
            <div>
                <small>
                    Entrez votre nom d'utilisateur et nous vous enverrons
                    un lien sur l'adresse email correspondate à votre compte pour changer votre
                    mot de passe.
                </small>
            </div>

            <button class="btn btn-primary mt-2">Envoyer email</button>
        {{ form_end(requestForm) }}
    </div>
{% endblock %}
